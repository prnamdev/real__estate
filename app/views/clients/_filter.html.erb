<div id="property_filter_modal"  class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag(filter_path, :method => "get") do %>  
        <div class="modal-header">
          <h5 class="modal-title">Search Property</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <h4 class="modal-title popup-modal-title"></h4>
        </div>

        <div class="modal-body popup-modal-body">       
          <%= text_field_tag :title, params[:search], placeholder: 'Search' %>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= button_tag "Search", :class => 'btn btn-primary',:title => nil %>
        </div>
      <% end %>
    </div>
  </div>
</div>